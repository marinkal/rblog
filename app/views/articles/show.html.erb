<h2><%= @article.title %> </h2>
<p><%= @article.text%></p>
<% @article.comments.each do |comment| %>
	<p><%=comment.body%><br/>
	<span style="font-size:80%;color:green"><%=comment.author%></span>
</p>
	<hr/>

<% end %>
<%= form_for([@article,@article.comments.build]) do |f| %>
<p>
	body<br/>
	<%= f.text_area :body %>
</p>
<p>
	
	<%= f.submit  %>
</p>
<% end %>